<table class="table table-bordered table-striped">
    @if (Model != null)
    {
        <tr>
            <th>Account ID</th>
            <th>Customer ID</th>
            <th>Account</th>
            <th>Balance</th>

        </tr>
        <tr>
            <td>@Model.a.ID</td>
            <td>@Model.a.Customer_ID</td>
            <td>@Model.a.Account_Type</td>
            <td>@Model.a.Balance</td>
        </tr>
    }
</table>
