@model Customer
@{
    ViewData["Title"] = "DeleteCustomer";
}

<h1>DeleteCustomer</h1>
<form asp-action="DeleteCustomer">
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.Name)
    @Html.HiddenFor(x => x.SSN)
    @Html.HiddenFor(x => x.Age)
    @Html.HiddenFor(x => x.Address_1)
    @Html.HiddenFor(x => x.Address_2)
    @Html.HiddenFor(x => x.City)
    @Html.HiddenFor(x => x.State)
    <table>
        <tr>
            <td>
                <label asp-for="ID"></label>
            </td>
            <td>
                @Model.ID
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Name"></label>
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="SSN"></label>
            </td>
            <td>
                @Model.SSN
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Age"></label>
            </td>
            <td>
                @Model.Age
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Address_1"></label>
            </td>
            <td>
                @Model.Address_1
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Address_2"></label>
            </td>
            <td>
                @Model.Address_2
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="City"></label>
            </td>
            <td>
                @Model.City
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="State"></label>
            </td>
            <td>
                @Model.State
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <input type="submit" value="Delete" class="btn btn-info" />
            </td>
        </tr>
    </table>
</form>
<a asp-controller="Customer" asp-action="ViewCustomers" class="btn btn-info">Back to List</a>

